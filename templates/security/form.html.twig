{% extends 'base.html.twig' %}
{% block body %}
<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
  <div style="width: 80%; max-width: 600px; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
  
    {{ form_start(form, {'attr': {'class': 'my-form'}}) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}
    <button type="submit" style="width: 100%; padding: 8px; background-color: #007bff; color: #fff; border: none; border-radius: 4px; cursor: pointer; margin-top: 10px;">Register!</button>
    {{ form_end(form) }}

  </div>
</div>
{% endblock %}

